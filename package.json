{
  "name": "@eamode/authorizer",
  "version": "1.0.0",
  "description": "Authorizes requests to resources",
  "main": "dist/authorizer.umd.js",
  "module": "dist/authorizer.js",
  "typings": "dist/types/authorizer.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "pretest": "npm run build:test",
    "test": "jasmine \"dist/test/spec/**/*.js\"",
    "build:test": "tsc -p tsconfig.spec.json && cpx \"spec/**/*.json\" dist/test/spec",
    "format": "prettier --write **/*.ts",
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc && rollup -c && rollup -c -o dist/authorizer.umd.js -f umd -n authorizer --sourcemap",
    "start": "tsc-watch --onSuccess \"rollup -c\"",
    "clean": "rimraf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EAmode/authorizer.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/EAmode/authorizer/issues"
  },
  "homepage": "https://github.com/EAmode/authorizer#readme",
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 80
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format",
      "pre-push": "npm run test && npm run build"
    }
  },
  "dependencies": {
    "cytoscape": "^3.2.16"
  },
  "devDependencies": {
    "@types/jasmine": "^2.8.8",
    "@types/ramda": "^0.25.38",
    "cpx": "^1.5.0",
    "husky": "^1.1.2",
    "jasmine": "^3.2.0",
    "jasmine-core": "^3.2.1",
    "prettier": "^1.14.2",
    "ramda": "^0.25.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.66.0",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rxjs": "^6.3.2",
    "semantic-release": "^15.10.6",
    "typescript": "^3.0.3"
  }
}
